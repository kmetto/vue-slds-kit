{
  "name": "vue-slds-kit",
  "version": "0.0.8",
  "description": "Vuejs UI kit for Salesforce Lightning Design System",
  "main": "lib/slds-vue-kit.js",
  "scripts": {
    "doc": "babel-node build/doc/",
    "lib": "babel-node build/lib/",
    "lint": "eslint src build docs/src",
    "lint:fix": "eslint --fix src build docs/src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmetto/vue-slds-kit.git"
  },
  "keywords": [
    "slds",
    "salesforce"
  ],
  "author": "Konstantin Metto <met9127@gmail.com> (https://unicore.by)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kmetto/vue-slds-kit/issues"
  },
  "homepage": "https://github.com/kmetto/vue-slds-kit#readme",
  "devDependencies": {
    "@salesforce-ux/design-system": "^2.5.2",
    "@vue/test-utils": "^1.0.0-beta.12",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.9",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.7",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "node-sass": "^4.7.2",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.2",
    "vue-jest": "^2.1.0",
    "vue-loader": "^14.1.1",
    "vue-server-renderer": "^2.5.13",
    "vue-template-compiler": "^2.5.13"
  },
  "dependencies": {
    "vue": "^2.5.13",
    "webpack": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
